{
  "name": "emi",
  "type": "bin",
  "clear_build_path" : true,
  "build_in" : "github",
  "next": [
    {
      "build" : "py_package",
      "build_in" : "out",
      "copy" : [
        {"../../src/" : "src/"},
        {"../../inc/" : "inc/"},
        {"../../test/" : "test/"},
        {"../../README.md" : "README.md"},
        {"../../LICENSE" : "LICENSE"}
      ],
      "config" : {
        "clear_build_path" : false,
        "author_name" : "eons",
        "author_email" : "support@eons.llc",
        "description" : "eons Modular Installer",
        "package_url" : "https://github.com/eons-dev/bin_emi",
        "license" : "MIT License",
        "python_min" : "3.7",
        "classifiers" : [
          "Development Status :: 3 - Alpha"
        ],
        "next" : [
          {
            "build" : "py_install",
            "build_in" : "../",
            "config" : {}
          }
        ]
      }
    },
    {
      "run_when" : [
        "release"
      ],
      "build" : "py_publish",
      "build_in" : "./",
      "config" : {
        "clear_build_path" : false
      }
    }
  ]
}